<% if flash[:error] %>
  <div data-alert class="alert-box alert radius">
    <%= flash[:error][0] %>
    <%= flash[:error][1]%>
    <a href="#" class="close">&times;</a>
  </div>
<% end %>

<%= form_for @track, url: user_stems_path, :user_id => params[:id], builder: LabellingFormBuilder do |f| %>
  <%= f.text_field_with_label :track_name, required: true %>
  <%= f.url_field_with_label :download_url, required: true %>
  <%= f.submit "Submit", :disable_with => 'Submiting...' %>
<% end %>
