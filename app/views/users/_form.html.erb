<%= simple_form_for @current_user, html: { multipart: true } do |f| %>

  <%= f.input :user_name, required: true %>
  <%= f.input :email, required: true %>
  <ul class="right inline-list toggle-checkbox">
    <li>
      <label for="toggle-password">visible?</label>
    </li>
    <li>
      <input type="checkbox" id="password-toggle" name="toggle-password" value="0">
    </li>
  </ul>
  <%= f.input :password, required: true %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :location %>
  <div class="row">
    <div class="small-6 column">
      <%= f.input :avatar, as: :file %>
      <%= f.input :remote_avatar_url, as: :url, label: "or image URL" %>
    </div>
    <div class="small-6 column avatar-preview">
      <%= image_tag(@current_user.avatar_url(:thumb)) if @current_user.avatar? %>
    </div>
  </div>
  <%= f.button :submit %>
<% end %>
