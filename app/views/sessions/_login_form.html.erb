<div class="row">
  <p class="welcome">Registered Users</p>
  <p class="row forgotten-password">
    <%= link_to("forgotten password?", new_password_reset_path, class: "right" ) %>
  </p>
  <%= simple_form_for :session, url: login_path do |f| %>
    <%= f.input :email,
                wrapper: :prepend_icon,
                icon: "fi-torso-female",
                placeholder: "email"
                %>
    <%= f.input :password,
                wrapper: :prepend_icon,
                icon: "fi-lock"
                %>
  <div class="row">
    <div class="small-4 large-2 columns">
      <%= label_tag :remember_me, nil, class: "inline right"  %>
    </div>
    <div class="small-8 large-10 columns">
      <%= check_box_tag :remember_me, params[:remember_me], 1, class: "inline" %>
    </div>
  </div>
  <div class="row">
    <%= f.button :submit, "Login", class: "small-3 centered column radius" %>
      <% end %>
  </div>
</div>
