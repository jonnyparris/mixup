<div class="row">
  <%= simple_form_for :session, url: login_path do |f| %>
    <%= f.input :email,
                wrapper: :prepend_icon,
                icon: "fi-torso-female",
                placeholder: "email"
                %>
    <%= f.input :password,
                wrapper: :prepend_icon,
                icon: "fi-lock"
                %>
  <div class="row collapse">
      <%= check_box_tag :remember_me, params[:remember_me], 1, class: "inline" %>
      <%= label_tag :remember_me, nil, class: "inline"  %>
  </div>
  <div class="row text-center">
    <%= f.button :submit, "Login", class: "small-3 small-centered radius" %>
      <% end %>
  </div>
</div>
<%= link_to("Forgotten your password?", new_password_reset_path, class: "right" ) %>
